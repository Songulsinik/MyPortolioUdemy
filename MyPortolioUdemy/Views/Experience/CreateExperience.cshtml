@model Experience
@{
    ViewData["Title"] = "CreateExperience";
    Layout = "~/Views/Layout/Index.cshtml";
}

<div class="main-panel">
    <div class="content">
        <div class="container-fluid">
            <h4 class="page-title">Deneyimler</h4>
            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">Deneyim Ekleme Sayfası</div>
                        </div>
                        <div class="card-body">
                            <div class="card-sub">
                                Deneyimler ile ilgili ekleme işlemlerini aşağıdaki panelden yapabilirsiniz :
                            </div>
                         <form method="post">
                                <label>Firma Bilgisi</label>
                                <input type="text" asp-for="ExperienceHead" class="form-control" />
                                <br />
                                <label>Çalışılan Pozisyon</label>
                                <input type="text" asp-for="ExperienceTitle" class="form-control" />
                                <br />
                                <label>Tarih Aralığı</label>
                                <input type="text" asp-for="ExperienceDate" class="form-control" />
                                <br />
                                <label>Açıklama</label>
                                <textarea rows="4" class="form-control" asp-for="ExperienceDescription"></textarea>
                                <br />
                                <button class="btn btn-primary">Deneyimi Ekle</button>
                         </form>
                            
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>

